<%- include("../partials/header") %>
<div class="container">
  <div class="row">

    <h1 style="text-align: center;">Create a new Campground</h1>

    <div style="width: 30%; margin: 30px auto;">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input type="text" placeholder="name" name="name" class="form-control" autofocus>
        </div>
        <div class="form-group">
          <input type="text" placeholder="image URL" name="image" class="form-control">
        </div>
        <div class="form-group">
          <input type="text" placeholder="Campground description" name="description" class="form-control">
        </div>
        <div class="form-group">
          <label for="price">R$/Night</label>
          <input type="number" placeholder="Price/Night" name="price" class="form-control" min="0.10" step="0.10">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds">Go Back</a>
    </div>


  </div>

</div>


<%- include("../partials/footer") %>